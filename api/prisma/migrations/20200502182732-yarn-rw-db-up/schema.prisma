datasource DS {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Book {
  id        String   @default(uuid()) @id
  title     String
  rating    String
  review    String
  createdAt DateTime @default(now())
}

model Journal {
  id        String   @default(cuid()) @id
  body      String
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @default(autoincrement()) @id
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
